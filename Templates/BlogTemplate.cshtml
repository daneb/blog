<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Title</title>
    <link rel="stylesheet" href="output.css">
    <style>
        /* You can add custom styles here if needed */
      .prose p {
          margin-bottom: 1em; /* Adjust the value as needed */
      }
    </style>
</head>
<body class="bg-gray-50 text-gray-800">
    <header class="text-center py-6 bg-white shadow">
        <div class="flex justify-center items-center">
            <a href="index.html">
              <img src="images/me.png" alt="Profile Picture" class="w-12 h-12 rounded-full mr-4"/>
            </a>
            <h1 class="text-3xl font-bold">@Model.Title</h1>
        </div>
    </header>
    <main class="max-w-4xl mx-auto px-4 py-8">
        <article>
            <div class="prose prose-blue max-w-none">
                @Raw(Model.Content)
            </div>
        </article>
    </main>

    <footer class="text-center py-4 bg-white shadow mt-10">
        <p>&copy; @(DateTime.Now.Year) Dane Balia. All rights reserved.</p>
    </footer>
</body>
</html>
